{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React Library TypeScript Config",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["dom", "ES2015"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"]
}
