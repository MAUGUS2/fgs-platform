{
  "name": "fgs-platform",
  "version": "0.1.0",
  "private": true,
  "description": "FGS Real Estate Management Platform - Luxury-minimal site evolving to multi-tenant dashboard",
  "keywords": ["real-estate", "management", "platform", "monorepo", "next.js", "trpc"],
  "author": "MAUGUS2",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "dev:marketing": "pnpm --filter marketing dev",
    "dev:dashboard": "pnpm --filter dashboard dev",
    "build:marketing": "pnpm --filter marketing build",
    "build:dashboard": "pnpm --filter dashboard build"
  },
  "devDependencies": {
    "@turbo/gen": "^1.13.2",
    "turbo": "^1.13.2",
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  }
}